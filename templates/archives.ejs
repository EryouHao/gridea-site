<html lang="en">
<head>
  <%- include('./includes/head', { siteTitle: `博客 | ${site.themeConfig.siteName}` }) %>
</head>
<body>
  <div class="antialiased flex flex-col min-h-screen" id="app">
    <%- include('./includes/header', { hideBorder: false }) %>
    
    <div class="max-w-6xl w-full mx-auto px-4 py-8 my-8 flex-1">
      <div class="text-center p-10 mb-10">
        <h2 class="text-3xl font-medium text-gray-800">从我们的博客</h2>
        <p class="text-gray-500 mt-3">获取 Gridea 的更新动态，使用技巧，以及更多</p>
      </div>
      <div class="flex flex-wrap -m-4">
        <% posts.forEach(function(post) { %>
          <div class="sm:w-full md:w-1/2 lg:w-1/3 p-4 mb-2">
            <a href="<%= post.link %>" class="block w-full bg-cover rounded bg-yellow-100" style="padding-top: 56.25%; background-image: url('<%= post.feature%>');"></a>
            <div class="text-gray-400 text-sm font-thin mt-3 mb-2 flex items-center">
              <i class="ri-timer-2-line mr-2"></i> <%= post.dateFormat %>
            </div>
            <a href="<%= post.link %>">
              <h2 class="text-xl hover:text-gray-900"><%= post.title %></h2>
            </a>
            <div class="text-gray-500 mt-3"><%- post.abstract %></div>
          </div>
        <% }); %>
      </div>
    </div>

    <%- include('./includes/footer') %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
  <script src="/media/scripts/main.js"></script>
</body>
</html>