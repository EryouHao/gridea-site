<html lang="en">
<%- include('./includes/head', { siteTitle: site.themeConfig.siteName }) %>
<body>
  <div class="antialiased">
    <div class="max-w-5xl mx-auto px-6 md:px-8">
      <%- include('./includes/header') %>
      <div class="mb-20 md:flex mt-10 lg:mt-6 md:border-t md:border-gray-400 md:pt-2 lg:border-t-0 lg:pt-0">
        <div class="w-full md:w-2/3 mt-6">
          <h1 class="text-4xl"><%= post.title %></h1>
          <% if (themeConfig.showFeatureImage && post.feature) { %>
            <img class="max-w-full mt-6 rounded-sm" src="<%= post.feature %>" alt="">
          <% } %>
          <div class="mt-6 lg:mt-10 post-content">
            <%- post.content %>
          </div>
          <% if (typeof commentSetting !== 'undefined' && commentSetting.showComment) { %>
            <% if (commentSetting.commentPlatform === 'gitalk') { %>
              <div class="mt-6">
                <%- include('./includes/gitalk') %>
              </div>
            <% } %>
  
            <% if (commentSetting.commentPlatform === 'disqus') { %>
              <div class="mt-6">
                <%- include('./includes/disqus') %>
              </div>
            <% } %>
          <% } %>
        </div>
        <% if (!post.hideInList) { %>
          <div class="w-full md:w-1/3">
            <div class="mt-6 md:pl-8">
              <h4 class="text-base font-thin text-gray-700 mb-2">发布时间</h4>
              <div class="text-lg mb-6"><%= post.dateFormat %></div>
              <h4 class="text-base font-thin text-gray-700 mb-2">标签</h4>
              <div class="mb-6">
                <% post.tags.forEach(function(tag) { %>
                  <a href="<%= tag.link %>" class="py-1 px-4 border-gray-300 border text-sm inline-block text-gray-700 hover:text-gray-900 rounded mr-2 mb-2"><%= tag.name %></a>
                <% }); %>
              </div>
              <h4 class="text-base font-thin text-gray-700 mb-2">阅读时间</h4>
              <div class="text-lg mb-6"><%= post.stats.text %></div>
              <h4 class="text-base font-thin text-gray-700 mb-2">相关阅读</h4>
              <div class="border-b border-gray-400">
                <%- include('./includes/related-posts', { currentPost: post }) %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      <%- include('./includes/footer') %>
    </div>
  </div>
  <script>
    Prism.highlightAll()
  </script>
</body>
</html>